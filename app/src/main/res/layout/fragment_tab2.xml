<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Film 1 dan Film 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Film 1 -->
            <LinearLayout
                android:id="@+id/film1Layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <!-- ... (Film 1 contents) -->
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:src="@drawable/comedi1"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="My Stupid Boss"
                    android:textColor="@color/DarkBlue"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <RatingBar
                    android:id="@+id/ratingBar1"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3.9"
                    android:scaleX="0.3"
                    android:scaleY="0.3"
                    android:stepSize="0.1" />
            </LinearLayout>

            <!-- Film 2 -->
            <LinearLayout
                android:id="@+id/film2Layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <!-- ... (Film 2 contents) -->
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:src="@drawable/comedi2"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/title2"
                    android:textColor="@color/DarkBlue"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cek Toko Sebelah"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <RatingBar
                    android:id="@+id/ratingBar2"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:numStars="5"
                    android:rating="4.0"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:scaleX="0.3"
                    android:scaleY="0.3"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Film 3 dan Film 4 -->
        <LinearLayout
            android:id="@+id/film3Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Film 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <!-- ... (Film 3 contents) -->
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:src="@drawable/comedi3"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/title3"
                    android:textColor="@color/DarkBlue"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Susah Sinyal"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <RatingBar
                    android:id="@+id/ratingBar3"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:numStars="5"
                    android:rating="4.0"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:scaleX="0.3"
                    android:scaleY="0.3"/>
            </LinearLayout>

            <!-- Film 4 -->
            <LinearLayout
                android:id="@+id/film4Layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <!-- ... (Film 4 contents) -->
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:src="@drawable/comedi4"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/title4"
                    android:textColor="@color/DarkBlue"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pretty Boys"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <RatingBar
                    android:id="@+id/ratingBar4"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:numStars="5"
                    android:rating="4.0"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:scaleX="0.3"
                    android:scaleY="0.3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
